package ar.edu.unlam.pb2.gestiondecriaturaselementales;

import java.util.Random;

abstract class CriaturaElemental implements Entrenable {
	protected String nombre;
	protected Integer nivelEnergia;
	protected ElementosEnum afinidadElemental;
	protected boolean esTranquila;
	protected final Integer MAXIMO_ENERGIA = 200;
	
	protected final Random generador = new Random();
	
	public CriaturaElemental(String nombre){
		this.nombre = nombre;
		this.afinidadElemental = ElementosEnum.values()[generador.nextInt(ElementosEnum.values().length)];
		this.esTranquila = generador.nextBoolean();
		this.nivelEnergia = generador.nextInt(MAXIMO_ENERGIA) + 1;
	}

	public CriaturaElemental(String nombre, ElementosEnum elemento, Integer nivelEnergia, boolean esTranquila) {
		this.nombre = nombre;
		this.afinidadElemental = elemento;
		this.nivelEnergia = nivelEnergia;
		this.esTranquila = esTranquila;
	}

	public String getNombre() {
		return nombre;
	}

	public Integer getNivelEnergia() {
		return nivelEnergia;
	}

	public ElementosEnum getAfinidadElemental() {
		return afinidadElemental;
	}

	public boolean isEsTranquila() {
		return esTranquila;
	}
	
	public abstract void entrenar();
}
